<UserControl x:Class="CustomizationPopup.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:local="clr-namespace:CustomizationPopup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <local:MyLayoutControl IsCustomization="True">
            <dxlc:LayoutGroup Header="Group 1">
                <dxlc:LayoutItem Label="Item 1">
                    <TextBlock Text="Some Text"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Item 2">
                    <TextBlock Text="Some Text"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Header="Group 2">
                <dxlc:LayoutItem Label="Item 1">
                    <TextBlock Text="Some Text"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Item 2">
                    <TextBlock Text="Some Text"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

        </local:MyLayoutControl>

    </Grid>
</UserControl>
